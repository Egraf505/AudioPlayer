<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:theme="@style/NoActionBar"
    tools:context=".Settings">

    <TextView
        android:id="@+id/Text_settings"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/gilroy_ultralight"
        android:text="Настройки"
        android:textColor="#E5E5E5"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ToMain"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:textColor="#E5E5E5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_righta"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="92dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Profile"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="126dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_profile"
                    tools:srcCompat="@drawable/ic_profile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:fontFamily="@font/gilroy_ultralight"
                        android:gravity="center|left"
                        android:text="Name"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:text="Name" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_ultralight"
                        android:gravity="left|center"
                        android:text="Елизавета"
                        android:paddingLeft="10dp"
                        android:textColor="#2F2E2E"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        tools:text="Елизавета" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/BtProfile"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    tools:srcCompat="@drawable/ic_keyboard_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Folder"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"/>

            </LinearLayout>

            <TextView
                android:id="@+id/TextAccount"
                android:layout_width="360dp"
                android:layout_height="31dp"
                android:gravity="center|left"
                android:text="Аккаунт"
                android:textColor="#EAF0FF"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/Email"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:fontFamily="@font/gilroy_ultralight"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/EmailStr"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:fontFamily="@font/gilroy_ultralight"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="lmza.i@mail.ru"
                    android:textColor="#2F2E2E"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Password"
                android:layout_marginTop="5dp"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:fontFamily="@font/gilroy_ultralight"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Password"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PasswordStr"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:fontFamily="@font/gilroy_ultralight"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="изменить пароль"
                    android:textColor="#2F2E2E"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>